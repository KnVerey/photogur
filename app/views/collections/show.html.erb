<div class="jumbotron show">
	<h1><%= @collection.name %></h1>
	<%= link_to button_tag("Change collection name"), edit_collection_path(@collection) %><br>
	<%= link_to button_tag("Delete collection"), @collection, confirm: "Are you sure you want to delete this collection?", method: :delete %>
</div>

<div>
	<% if @photos.empty? %>
		<h3 class="lead">Oh no! There aren't any photos in this collection!</h3>
		<p class="center">To add a photo to a collection, find the photo on the main page, click on the photo and then click "Edit photo."</p>
	<% end %>
</div>


<div class="center">
	<% @photos.each do |p| %>
		<div class="thumbs-container">
			<%= link_to image_tag(p.url, class: "img-thumbnail"), photo_path(p) %> <br>
		</div>
	<% end %>

</div><br><br>